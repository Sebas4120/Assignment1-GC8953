<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="482.0" prefWidth="698.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.georgiancollege.assignment1gc8953.Controllers.PopulationController">
   <children>
      <BarChart fx:id="OntarioChart" layoutX="50.0" layoutY="98.0" prefHeight="327.0" prefWidth="597.0">
        <xAxis>
          <CategoryAxis label="Year" prefHeight="47.0" prefWidth="421.0" side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Population" side="LEFT" upperBound="20000.0" />
        </yAxis>
      </BarChart>
      <Button fx:id="btnTable" layoutX="552.0" layoutY="445.0" mnemonicParsing="false" prefHeight="5.0" prefWidth="119.0" text="View Table" />
      <Label fx:id="titleChart" alignment="CENTER" contentDisplay="CENTER" layoutX="82.0" layoutY="41.0" prefHeight="39.0" prefWidth="533.0" text="ONTARIO POPULATION">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <RadioButton fx:id="maleRadio" layoutX="291.0" layoutY="427.0" mnemonicParsing="false" onAction="#changeMale" text="Male" />
      <RadioButton fx:id="femaleRadio" layoutX="442.0" layoutY="427.0" mnemonicParsing="false" onAction="#changeFemale" text="Female" />
      <RadioButton fx:id="totalRadio" layoutX="140.0" layoutY="427.0" mnemonicParsing="false" onAction="#changeTotal" text="Total" />
   </children>
</AnchorPane>
